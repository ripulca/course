{% extends 'base.html.twig' %}

{% block title %}Cart{% endblock %}

{% block body %}
    <h1>Cart</h1>

    <div class="container">
        <div class="position-relative overflow-hidden p-3 p-md-5 text-center bg-light">
            <div class="row">
                {% for medicine in medicines %}
                        <div class="card-body">
                            <a href="{{ path('app_medicine_show', {'id': medicine.medicine.id}) }}">
                                <h5 class="card-title">{{medicine.medicine.name}}</h5>
                                <p class="card-text">{{medicine.medicine.price}}₽</p>
                                <p class="card-text">{{medicine.amount}}шт.</p>
                            </a>
                            <div class="btn">{{ include('cart/_delete_form.html.twig') }}</div>
                        </div>
                {% else %}
                    <p colspan="5">no records found, please, come back later</p>
                {% endfor %}
                <a class="btn btn-primary" href="{{ path('app_custom_edit', {'id': custom.id}) }}">place an order</a>
            </div> 
        </div>
    </div>

    <a href="{{ path('app_medicine_index') }}">back to list</a>

{% endblock %}