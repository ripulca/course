{% extends 'base.html.twig' %}

{% block title %}Hospital{% endblock %}

{% block body %}
    <h1>Hospital</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ hospital.name }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ hospital.city }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ hospital.phone }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ hospital.email }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_hospital_index') }}">back to list</a>

{% endblock %}
