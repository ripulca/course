{% extends 'base.html.twig' %}

{% block title %}Contains index{% endblock %}

{% block body %}
    <h1>Contains index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Amount</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for contain in contains %}
            <tr>
                <td>{{ contain.id }}</td>
                <td>{{ contain.amount }}</td>
                <td>
                    <a href="{{ path('app_contains_show', {'id': contain.id}) }}">show</a>
                    <a href="{{ path('app_contains_edit', {'id': contain.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_contains_new') }}">Create new</a>
{% endblock %}
