{% extends 'base.html.twig' %}

{% block title %}Doctor index{% endblock %}

{% block body %}
    <h1>Doctor index</h1>
    <form method="post">
        <input type="hidden" name="makeReport" value="true">
        <button type="submit" name="submit">Get report</button>
    </form>

    <table class="table">
        <thead>
            <tr>
                <th>Specialization</th>
                <th>Post</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for doctor in doctors %}
            <tr>
                <td>{{ doctor.specialization }}</td>
                <td>{{ doctor.post }}</td>
                <td>
                    <a href="{{ path('app_doctor_show', {'id': doctor.id}) }}">show</a>
                    {% if is_granted('ROLE_ADMIN') %}
                        <a href="{{ path('app_doctor_edit', {'id': doctor.id}) }}">edit</a>
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('app_doctor_new') }}">Create new</a>
    {% endif %}
{% endblock %}
